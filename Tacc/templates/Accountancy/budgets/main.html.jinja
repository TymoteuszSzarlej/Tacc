{% extends 'base.html' %}
{% block content %}
<h2>Budżety</h2>
<div class="container">
    <a href="{% url 'create_budget' %}" class="btn btn-success">➕ Dodaj nowy budżet</a>

    <div class="budgets-container">
        {% for budget in budgets %}
        <div class="card">
            <h3>{{ budget.name }}</h3>
            <p><strong>Kwota:</strong> {{ budget.amount }}</p>
            <p><strong>Data utworzenia:</strong> {{ budget.created_at }}</p>
            <div class="actions">
                <a href="{% url 'edit_budget' budget.id %}" class="btn btn-primary">✏️ Edytuj</a>
                <a href="{% url 'delete_budget' budget.id %}" class="btn btn-danger">🗑️ Usuń</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}