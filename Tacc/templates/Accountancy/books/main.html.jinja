{% extends "base.html" %}

{% block content %}
<h2>📚 Księgi</h2>
<div class="container">
    {% for book in books %}
    <div class="card">
        <h3>{{ book.name }}</h3>
        <p><strong>Opis:</strong> {{ book.description }}</p>
        <p><strong>Data utworzenia:</strong> {{ book.created_at }}</p>
        <p><strong>Data ostatniej aktualizacji:</strong> {{ book.updated_at }}</p>
        <div class="actions">
            <a href="{% url 'book_details' book.id %}" class="btn btn-info">👀 Szczegóły</a>
            <a href="{% url 'edit_book' book.id %}" class="btn btn-primary">✏️ Edytuj</a>
            <a href="{% url 'delete_book' book.id %}" class="btn btn-danger">🗑️ Usuń</a>
        </div>
    </div>
    {% endfor %}
    <a href="{% url 'create_book' %}" class="btn btn-success">➕ Dodaj nową księgę</a>
</div>
{% endblock %}
