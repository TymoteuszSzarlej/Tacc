{% extends "base.html" %}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Szczeg√≥≈Çy konta "{{ account.name }}"</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        body {
            background-color: #f8f9fa;
            color: #2c3e50;
        }
        
        .container {
            max-width: 900px;
            padding-top: 2rem;
        }
        
        h2, h3, h4 {
            color: #1a237e;
            font-weight: 600;
        }

        .card {
            border-radius: 8px;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: transform 0.3s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.2);
        }

        .btn-primary { background-color: #4a69bd; border-color: #3d5afe; }
        .btn-primary:hover {
            background-color: #3c57b0;
            color: white;
        }

        .transactions-container {
            margin-top: 1.5rem;
        }

        .locked {
            font-weight: bold;
            color: #6c757d;
            text-decoration: line-through;
        }
        
        .debit, .credit {
            background-color: #f8f9fa;
            border-radius: 4px;
            padding: 1rem;
            margin-bottom: 2rem;
        }

        .transactions-container {
            display: flex;
            justify-content: space-around;
            gap: 1.5rem;
        }
        
        .transaction-card {
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .transaction-card:hover {
            border-left: 4px solid #4a6ee0;
        }

        /* Add some spacing between debit and credit sections */
        hr {
            margin-top: 2rem;
            margin-bottom: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Content goes here -->
    </div>

    {% block content %}
    <div class="container mt-4">
        <h2>Szczeg√≥≈Çy konta "{{ account.name }}"</h2>
        
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-transparent border-bottom: 1px solid #dee2e6;">
                <!-- {{ account.name }} Detayy -->
            </div>
            <div class="card-body p-3">
                <p><strong>Nazwa:</strong> {{ account.name }}</p>
                <p><strong>Opis:</strong> 
                {% if account.description %}
                {{ account.description }}
                {% else %}
                <span class='locked'>Brak opisu</span>
                {% endif %}
                
                </p>
                <p><strong>Rodzaj:</strong> {{ account.get_account_type_display }}</p>
                <p><strong>Podrodzaj:</strong> {{ account.get_account_subtype_display }}</p>
                <p><strong>Stan poczƒÖtkowy:</strong> {{ account.initial_balance }} z≈Ç</p>
                <p><strong>Data utworzenia:</strong> {{ account.created_at }}</p>
                <p><strong>Ksiƒôga:</strong> <a href="{% url 'book_details' account.book.id %}">{{ account.book.name }}</a></p>
            </div>

            <a href="{% url 'edit_account' account.id %}" class="btn btn-primary mt-3">‚úèÔ∏è Edytuj konto</a>
            <a href="#" onclick='if(confirm("Czy na pewno chcesz usunƒÖƒá to konto?")){
                var form = document.createElement("form");
                form.setAttribute("method",'POST');
                form.action="{% url 'delete_account' account.id %}";
                document.body.appendChild(form);
                form.submit();
            } else {return false;}' class="btn btn-danger mt-2">üóëÔ∏è Usu≈Ñ konto</a>

            <div class="row transactions-container">
                <h3>Transakcje</h3>
                
                <div class="col-md-6 debit mb-4 card">
                    <h4 class="mb-4"><strong>Debet</strong></h4>
                    {% for debit in debits %}
                        <div class="transaction-card card border-left-danger shadow-sm mb-3 transaction-card" style="margin-bottom: 1rem;">
                            <div class="card-body p-3">
                                <p><strong>Data:</strong> {{ debit.date }}</p>
                                <p><strong>Kwota:</strong> {{ debit.amount }} z≈Ç</p>
                                {% if debit.description %}
                                    <p><strong>Opis:</strong> {{ debit.description }}</p>
                                {% else %}
                                    <p><span class='locked'>Brak opisu</span></p>
                                {% endif %}
                                <p><strong>Kategoria:</strong> {{ debit.category.name }}</p>
                                <a href="{% url 'transaction_details' debit.id %}" class="btn btn-info">Szczeg√≥≈Çy transakcji</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <div class="col-md-6 credit card">
                    <h4><strong>Kredyt</strong></h4>
                    {% for credit in credits %}
                        <div class="transaction-card card border-right-success mb-3" style="margin-bottom: 1rem;">
                            <div class="card-body p-2 bg-light">
                                <p><strong>Data:</strong> {{ credit.date }}</p>
                                <p><strong>Kwota:</strong> {{ credit.amount }} z≈Ç</p>
                                <p><strong>Opis:</strong> {% if credit.description %}{{ credit.description }}{% else %}<span class='locked'>Brak opisu</span>{% endif %}</p>
                                <p><strong>Kategoria:</strong> {{ credit.category.name }}</p>
                                <a href="{% url 'transaction_details' credit.id %}" class="btn btn-info">Szczeg√≥≈Çy transakcji</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <h3>Saldo konta</h3>
            <p><strong>Obecne saldo: {{ account.calculate_balance }} z≈Ç</strong></p>
        </div>
    </div>
    {% endblock %}
</body>
</html>
