{% extends 'base.html' %}

{% block content %}
<style>
.container {
    margin: 20px auto;
    max-width: 800px;
    text-align: center;
}

.summary {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
}

.card {
    background-color: #333;
    color: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    width: 200px;
    text-align: center;
}

.card h3 {
    margin-bottom: 10px;
    font-size: 18px;
}

.card p {
    font-size: 24px;
    font-weight: bold;
}



.card:hover {
    background-color: #555;
    cursor: pointer;
}


</style>


<div class="container">
    <h2>Dashboard</h2>
    <div class="summary">
        <a href="{% url 'create_transaction' %}" class="card" style="background-color: green;">
            Dodaj transakcjÄ™
        </a>
            
        <div class="card">
            <h3>Liczba kont</h3>
            <p>{{ total_accounts }}</p>
        </div>
        <div class="card">
            <h3>Liczba transakcji</h3>
            <p>{{ total_transactions }}</p>
        </div>
        <div class="card">
            <h3>Aktywa</h3>
            <p>{{ total_assets|floatformat:2 }} PLN</p>
        </div>
        <div class="card">
            <h3>Pasywa</h3>
            <p>{{ total_liabilities|floatformat:2 }} PLN</p>
        </div>

        <div class="card">
            <h3>Przychody</h3>
            <p>{{ total_revenues|floatformat:2 }} PLN</p>
        </div>
        <div class="card">
            <h3>Koszty</h3>
            <p>{{ total_expenses|floatformat:2 }} PLN</p>
        </div>
        <div class="card {% if net_profit_positive %}gain{% else %}loss{% endif %}">
            <h3>Zysk netto</h3>
            <p>{{ net_profit|floatformat:2 }} PLN</p>
        </div>
    </div>
</div>


{% endblock %}