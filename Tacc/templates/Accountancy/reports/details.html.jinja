        </table>
      </div>
    </div>
    <canvas id="revenuesChart"></canvas>

    <!-- Expenses -->
    <div class="table-container">
      <div class="table-responsive">
        <table>
          <thead>
            <tr><th colspan="2">Koszty</th></tr>
            <tr>
