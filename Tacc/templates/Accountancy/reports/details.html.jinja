{% extends 'base.html' %}

{% block content %}
<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 20px;
  }

  .table-container {
    margin-bottom: 40px;
    display: flex;
    justify-content: center;
  }

  .table-responsive {
    width: 100%;
    max-width: 60vw;
  }

  .table-responsive table {
    width: 100%;
    border-collapse: collapse;
    text-align: center;
  }

  .table-responsive th,
  .table-responsive td {
    padding: 8px;
    border: 1px solid #dee2e6;
  }

  canvas {
    max-width: 100%;
    height: auto;
    margin: 20px auto;
    display: block;
  }

  @media (max-width: 576px) {
    .container {
      padding: 10px;
    }

    .table-responsive {
      max-width: 90vw;
    }
  }
</style>

<div class="container">
  <h2>ðŸ“Š {{ report.name }}</h2>_history
  <p>{{ report.description }}</p>
  <h3>{{ report_data.type }}</h3>

  {% if report.report_type == 'balance_sheet' %}
