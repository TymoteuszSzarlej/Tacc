        </table>
      </div>
    </div>
    <canvas id="expensesChart"></canvas>

  {% elif report.report_type == 'cash_flow_statement' %}
    <!-- Cash Flow -->
    <div class="table-container">
      <div class="table-responsive">
        <table>
          <thead>
            <tr><th colspan="2">Rachunek PrzepÅ‚ywÃ³w PieniÄ™Å¼nych</th></tr>
            <tr>
              <th>Åšrodki PieniÄ™Å¼ne</th>
              <th>Kwota</th>
            </tr>
          </thead>
          <tbody>
            {% for name, balance in report_data.cash_flows.items %}
            <tr>
              <td>{{ name }}</td>
              <td>{{ balance|floatformat:2 }}</td>
            </tr>
            {% endfor %}
            <tr>
              <td><strong>Razem Åšrodki PieniÄ™Å¼ne</strong></td>
