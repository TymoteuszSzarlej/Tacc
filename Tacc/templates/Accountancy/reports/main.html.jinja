{% extends 'base.html' %}
{% block content %}
<div class="container">
    <h2>📊 Raporty</h2>
    <a href="{% url 'create_report' %}" class="btn btn-success">➕ Dodaj nowy raport</a>

    <div class="reports-container">
        {% for report in reports %}
        <div class="card">
            <h3>{{ report.name }}</h3>
            {% if report.description %}
            <p>{{ report.description }}</p>
            {% endif %}
            <div class="actions">
                <a href="{% url 'report_details' report.id %}" class="btn btn-info">👀 Zobacz</a>
                <a href="{% url 'edit_report' report.id %}" class="btn btn-primary">✏️ Edytuj</a>
                <a href="{% url 'delete_report' report.id %}" class="btn btn-danger">🗑️ Usuń</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}